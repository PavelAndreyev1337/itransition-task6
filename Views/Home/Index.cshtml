@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="d-flex justify-content-around">

    <button  class="btn-lg" onclick="newGame()"> 
        <i class="fa fa-plus"></i>    
        New game
    </button>

    <button  class="btn-lg" onclick="location.href='@Url.Action("Find", "Game")'"> 
        <i class="fa fa-search"></i>    
        Find game
    </button>

</div>

<script>
function newGame() {
    var gameName = prompt("Enter game name", "New game");

    if (gameName != null) {
        window.location.href = '@Url.Content("~/Game/Index?gameName=")' + gameName;
    }
}
</script>